@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown ms-sm-15px me-sm-30px">
        <a class="nav-link dropdown-toggle nowrap" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @User.Identity?.Name
        </a>
        <ul class="dropdown-menu">

            <li><a class="dropdown-item text-dark" asp-controller="Account" asp-action="Manage" title="Manage">Manage</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item text-dark" asp-controller="Account" asp-action="UserSignOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Sign Out</a>
            </li>
                @* <form class="form-inline" asp-controller="Account" asp-action="LogOff" asp-route-returnUrl="">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form> *@

         @*    <li><a class="dropdown-item" href="#">Something else here</a></li> *@
        </ul>
    </li>
}
else
{
    <li class="nav-item ms-sm-15px me-sm-30px">
        <a class="nav-link nowrap" href="#" data-bs-toggle="modal" data-bs-target="#modal">Sign In</a>
    </li>
}
