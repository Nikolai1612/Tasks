<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tasks - @ViewBag.Title</title>
    <link rel="icon" href="~/img/tasks_icon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href ="~/Tasks.styles.css" asp-append-version="true" />
    <link rel ="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand align-text-top logo-brand" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item mx-sm-15px">
                            <a class="nav-link nowrap" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-sm-15px">
                            <a class="nav-link nowrap" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <partial name="_AccountPartial" /> 
                    </ul>
                    <form class="d-flex form-search" role="search">
                        <input class="form-control input-search" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn text-light logo-search btn-search" type="submit">
                            @* <span class="logo-search"></span> *@
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <partial name="_AccountModal" model="@ViewBag.LoginModel" />

    <div class="container">
        <main role="main" class="pb-3 pt-5 mt-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Tasks - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)   
</body>
</html>
